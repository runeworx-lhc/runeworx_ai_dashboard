  <div id="gpt-console">
    <textarea id="user-input" placeholder="Speak 'Thor‚Äôs Welcome' to begin..."></textarea>
    <br />
    <button id="send-btn">Invoke GPT</button>
    <div id="gpt-output">üåÄ Awaiting invocation...</div>
  </div>

  <script src="config.js"></script>
  <script>
    document.getElementById('send-btn').addEventListener('click', async () => {
      const text = document.getElementById('user-input').value.trim();

      if (!text.toLowerCase().includes("thor‚Äôs welcome")) {
        document.getElementById('gpt-output').textContent = "‚ö†Ô∏è Speak the sacred words: Thor‚Äôs Welcome";
        return;
      }

      document.getElementById('gpt-output').textContent = "‚ö° Summoning Odin‚Äôs insight...";

      try {
        const resp = await fetch(OPENAI_API_URL, {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
            "Authorization": "Bearer " + YOUR_API_TOKEN // Use secure method to store token
          },
          body: JSON.stringify({
            model: "gpt-4o",
            messages: [
              { role: "system", content: "You are Rune Worx's Norse-inspired assistant." },
              { role: "user", content: text }
            ]
          })
        });

        const data = await resp.json();
        document.getElementById('gpt-output').textContent =
          data.choices?.[0]?.message?.content || "‚ö†Ô∏è Something went wrong. Check your invocation.";
      } catch (error) {
        document.getElementById('gpt-output').textContent = "‚ö†Ô∏è Error: " + error.message;
      }
    });
  </script>

